@model Product
<div class="col-md-4 my-2">
  <div class="card" style="width: 18rem;">
    <img src="@Model?.ImageUrl" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">@Model.ProductName</h5>
      <p class="card-text">@Model.Summary</p>
      <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary"><i
          class="fa-solid fa-arrow-right"></i>Ürüne Git</a>
    </div>
  </div>
</div>