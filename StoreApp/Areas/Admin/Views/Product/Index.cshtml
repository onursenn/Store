@model IEnumerable<Product>
<div class="text-center">
    <h2>Ürünler</h2>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa fa-plus"></i> Ekle</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Görsel</th>
                <th>Ürün Kategorisi</th>
                <th>Ürün Id</th>
                <th>Ürün Adı</th>
                <th>Fiyat(TL)</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <td><img src="@prd.ImageUrl" width="60" alt="@prd.ProductName" class="border border-light rounded"></td>
                    <td> @prd.CategoryId</td>
                    <td> @prd.ProductId</td>
                    <td> @prd.ProductName</td>
                    <td> @prd.Price</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning btn btn-sm" asp-controller="Product" asp-action="Update"
                                asp-route-id=@prd.ProductId><i class="fa fa-edit"></i> Güncelle </a>
                            <a class="btn btn-danger btn btn-sm" asp-controller="Product" asp-action="Delete"
                                asp-route-id=@prd.ProductId><i class="fa fa-trash"></i> Sil </a>
                            <a class="btn btn-info btn btn-sm" asp-controller="Product" asp-area="" target="_blank"
                                asp-action="Get" asp-route-id=@prd.ProductId><i class="fa fa-search"></i> Web </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>