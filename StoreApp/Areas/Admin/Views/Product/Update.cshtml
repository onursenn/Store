@model ProductDtoForUpdate

<div class="text-center">
    <h2>Ürün Güncelleme</h2>
</div>
<form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId">Kategori</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label asp-for="Summary">Özet</label>
        <input asp-for="Summary" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price">Fiyatı</label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group mb-3">

        <img class="rounded" src="@Model?.ImageUrl" width="150" </div>

        <div class="form-group mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="file" name="file" class="form-control">
        </div>

        <div class="form-group mb-3">
            <div class="btn-group">
                <button class="btn btn-primary" type="submit"><i class="fa fa-save"> </i> Güncelle</button>
                <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-list"></i> Ürünler</a>
            </div>
        </div>
</form>